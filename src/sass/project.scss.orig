@import 'mixins';

.project {
  position: relative;

  font-size: 20px;

  border: 2px solid $title-color;

  margin: 18px auto;

  width: 90%;
  min-width: 900px;

  p {
    margin: 10px 30px;
  }

  h3 {
    @include no-margins();

    margin-left: 5%;

    font-weight: normal;
  }

  .title-bg {
    @include no-margins();

    position: absolute;
    top: 0;
    left: 0;

    width: 100%;

    height: 150px;

    background-color: $header-color;
  }

  .main-container {
    position: relative;
    z-index: 1;

    float: left;

    margin: 10px;

    width: 670px;
  }

  .copy-container {
    position: relative;
    z-index: 1;
  }

  .image {
    margin: 0 0 10px 5%;

    width: 600px;

    border: solid 1px $title-color;
  }

  .title {
    @include pixel-font();

    font-size: 50px;

    z-index: 1;

    padding-bottom: 20px;

    color: $title-color;
  }

  .label {
    @include pixel-font();

    color: $title-color;

    font-size: 35px;
  }

  .technologies {
    color: $title-color;
    font-size: 24px;
    font-weight: bold;
  }

  a {
    color: $title-color;
    font-size: 24px;
    font-weight: bold;
  }

